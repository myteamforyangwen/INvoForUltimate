<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

   <!-- <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent">-->

        <com.amap.api.maps.MapView
            android:id="@+id/basic_map"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.google.android.material.bottomnavigation.BottomNavigationView
                android:id="@+id/nav_view"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:layout_marginTop="740dp"
                android:alpha="0.7"
                android:background="@android:color/transparent"
                app:menu="@menu/bottom_navigation"
                tools:ignore="MissingConstraints" />
        </com.amap.api.maps.MapView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="50dp"
        android:layout_marginRight="50dp"
        android:layout_marginTop="550dp"
        android:layout_gravity="top"
        android:gravity="center"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/start_gather"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="@string/startGather"
            android:textColor="@color/colorBlack"
            android:background="@drawable/round_corner_btn_bg"/>



        <EditText
            android:id="@+id/create_trace"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.8"
            android:gravity="center"
            android:alpha="1"
            android:maxLines="1"
            android:inputType="text"
            android:visibility="gone"
            android:hint="@string/createTrack"
            android:background="@color/colorGreen">

        </EditText>

        <Button
            android:id="@+id/trace_setting"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.2"
            android:visibility="gone"

            android:background="@drawable/ic_setting" />
        <TextView
            android:id="@+id/start_track"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="@string/startTrack"
            android:textColor="@color/colorBlack"
            android:background="@drawable/round_corner_btn_bg"/>



    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:layout_marginBottom="80dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <Chronometer
                android:id="@+id/time_task"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textSize="18sp"
                android:format="00:00:00"
                android:gravity="center"
                android:alpha="0.75"
                android:layout_marginRight="10dp"
                android:background="@drawable/ring_grey"
                android:textColor="@color/colorBlack"/>

            <TextView
                android:id="@+id/start_for"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="@string/start"
                android:textColor="@color/colorBlack"
                android:background="@drawable/btn_start_end"/>

            <TextView
                android:id="@+id/speed"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:text="@string/start"
                android:textColor="@color/colorBlack"
                android:alpha="0.75"
                android:background="@drawable/ring_grey"/>


        </LinearLayout>


    <!-- </RelativeLayout>-->




</FrameLayout>


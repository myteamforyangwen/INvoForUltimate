<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shape_pop_main_bg"
    android:orientation="vertical">

    <CheckBox
        android:id="@+id/main_check_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:checked="false"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        android:text="定位跟随" />
    <CheckBox
        android:id="@+id/lifestyle_check_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:checked="false"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        android:text="生活服务" />
    <CheckBox
        android:id="@+id/sport_check_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:checked="false"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        android:text="体育服务" />
    <CheckBox
        android:id="@+id/entertainment_check_box"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:alpha="0.8"
        android:checked="false"
        android:textColor="@color/colorBlack"
        android:textSize="12sp"
        android:text="娱乐服务" />

</LinearLayout>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="MyPopWindowMore">
        <item name="android:windowEnterAnimation">@anim/pop_more_in</item>
        <item name="android:windowExitAnimation">@anim/pop_more_out</item>
    </style>

    <style name="MyPopWindowMainLocatio">
        <item name="android:windowEnterAnimation">@anim/pop_main_location_in</item>
        <item name="android:windowExitAnimation">@anim/pop_main_location_out</item>
    </style>

    <declare-styleable name="DynamicHeightRecyclerView">
        <attr name="maxHeight" format="integer" />
    </declare-styleable>
</resources>
